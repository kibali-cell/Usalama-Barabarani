        android:orientation="vertical">

        <TextView
            android:id="@+id/sourceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chanzo: "
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sourceDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wizara ya Ujenzi, Uchukuzi na Mawasiliano, “Mwongozo wa Usimikaji wa Lama za Barabarani”, Kitengo cha Usalama na Mazingira, 2009. Uk 5-15."
